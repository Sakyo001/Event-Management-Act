
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "AdminPage";
}

<link href="~/Content/Events.css" rel="stylesheet" />

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Add Event";
}


<!-- Main Form Container -->
<div class="event-container">
    <form action="/Admin/SubmitEvent" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <!-- Left and Right container -->
        <div class="form-container">
            <!-- Left Side -->
            <div class="left-side">
                <p><a href="/Admin/Events" class="back-link">Back to Events</a></p>
                <hr class="divider-line">

                <!-- Club Name and Event Name on the same line -->
                <div class="input-group">
                    <div>
                        <label for="clubName">Club Name:</label>
                        <input type="text" id="clubName" name="clubName" required />
                    </div>
                    <div>
                        <label for="eventName">Event Name:</label>
                        <input type="text" id="eventName" name="eventName" required />
                    </div>
                </div>

                <!-- Location -->
                <label for="location">Location:</label>
                <input type="text" id="location" name="location" required />

                <!-- Maximum Capacity -->
                <label for="maxCapacity">Maximum Capacity:</label>
                <input type="number" id="maxCapacity" name="maxCapacity" required />

                <!-- Date Range (Calendar) -->
                <label for="eventDateRange">Event Date:</label>
                <input type="date" id="startDate" name="startDate" required />
                to
                <input type="date" id="endDate" name="endDate" required />

                <!-- Time Range (Time) -->
                <label for="eventTimeRange">Event Time:</label>
                <input type="time" id="startTime" name="startTime" required />
                to
                <input type="time" id="endTime" name="endTime" required />
            </div>

            <!-- Vertical Divider Line -->
            <div class="divider"></div>

            <!-- Right Side -->
            <div class="right-side">
                <!-- Description -->
                <label for="description">Description:</label>
                <textarea id="description" name="description" rows="4" required></textarea>

                <!-- Add Photo -->
                <label for="eventPhoto">Add Photo:</label>
                <input type="file" id="eventPhoto" name="eventPhoto" accept="image/*" />

                <!-- Submit Button -->
                <button type="submit">Add Event</button>
            </div>
        </div>
    </form>
</div>

